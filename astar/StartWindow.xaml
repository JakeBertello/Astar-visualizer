<Window x:Class="astar.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:astar"
        mc:Ignorable="d"
        Title="A*" Height="250" Width="375" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="Submit" Content="Submit" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Submit_Click" Margin="0,167,0,0" Width="75"/>
        <TextBlock HorizontalAlignment="Center" Text="Welcome to my A* pathfinding visualizer! Enter a grid size (in number of tiles), and then select submit to get started. " TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,20,0,0" Height="45" Width="304" TextAlignment="Center"/>
        <TextBox HorizontalAlignment="Left" Margin="30,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="225,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Width" HorizontalAlignment="Left" Margin="69,84,0,0" VerticalAlignment="Top"/>
        <Label Content="Height" HorizontalAlignment="Left" Margin="262,84,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
